---
import RootLayout from '$components/RootLayout.astro';
import Header from '$components/landing/Header.svelte';
import HomePageTyping from '$components/examples/HomePageTyping.svelte';
import Features from '$components/landing/Features.astro';
import { BookOpen, Rocket, ArrowRight, ExternalLink, Github } from 'lucide-svelte';
---

<RootLayout
  title="Lipi Lekhika - Indian Script Transliteration"
  description="A powerful, fast, and open-source transliteration tool for Indian Brahmic Scripts. Type and convert between Devanagari, Telugu, Tamil, Bengali, and more."
  type="website"
>
  <div class="min-h-screen" id="home">
    <Header client:idle />

    <!-- Hero Section -->
    <section
      class="relative flex min-h-[90vh] flex-col items-center justify-center px-4 pt-14 overflow-hidden"
    >
      <!-- Background gradient effects -->
      <div
        class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(59,130,246,0.15),transparent)]"
      >
      </div>
      <div
        class="absolute top-1/2 left-1/2 -z-10 size-[600px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-primary/5 blur-3xl"
      >
      </div>

      <div class="mx-auto w-full max-w-6xl px-0 sm:px-6">
        <div class="grid w-full items-center gap-10 lg:grid-cols-2 lg:gap-12">
          <!-- Copy / CTAs -->
          <div class="text-center lg:text-left">
            <p
              class="mx-auto lg:mx-0 inline-flex items-center rounded-full border border-border/60 bg-background/40 px-3 py-1 text-xs font-medium text-muted-foreground backdrop-blur-sm"
            >
              Lipi Lekhika • Realtime Typing + Transliteration
            </p>

            <h1
              class="mt-5 text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl lg:text-5xl"
            >
              Type &amp; Convert Indian scripts with full speed and accuracy.
            </h1>

            <p
              class="mt-4 text-base text-muted-foreground sm:text-lg max-w-2xl mx-auto lg:mx-0"
            >
              Built for modern and ancient Brahmic scripts — including Vedic accents — with a fast, predictable typing
              experience.
            </p>

            <div
              class="mt-7 flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-3"
            >
              <a
                href="/app"
                class="group inline-flex h-11 w-full sm:w-auto items-center justify-center gap-2 rounded-lg bg-primary px-6 text-sm font-medium text-primary-foreground shadow-lg shadow-primary/25 transition-all hover:bg-primary/90 hover:shadow-xl hover:shadow-primary/30 hover:-translate-y-0.5"
              >
                <Rocket class="size-4" />
                Open App
                <ArrowRight class="size-4 transition-transform group-hover:translate-x-0.5" />
              </a>
              <a
                href="/getting-started/introduction"
                class="group inline-flex h-11 w-full sm:w-auto items-center justify-center gap-2 rounded-lg border border-border bg-background/50 px-6 text-sm font-medium transition-all hover:bg-accent hover:text-accent-foreground hover:-translate-y-0.5"
              >
                <BookOpen class="size-4" />
                Documentation
              </a>
              <a
                href="https://github.com/shubhattin/lipilekhika"
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex h-11 w-full sm:w-auto items-center justify-center gap-2 rounded-lg border border-border bg-background/50 px-6 text-sm font-medium transition-all hover:bg-accent hover:text-accent-foreground hover:-translate-y-0.5"
              >
                <Github class="size-4" />
                GitHub
              </a>
            </div>
          </div>

          <!-- Try it out -->
          <div class="lg:justify-self-end w-full max-w-xl mx-auto lg:mx-0">
            <div
              class="rounded-xl border border-border/60 bg-card/60 backdrop-blur-sm p-4 shadow-xl shadow-black/5"
            >
              <div class="mb-3 flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <img src="/main.png" alt="Lipi Lekhika" class="size-5" />
                  <p class="text-sm font-semibold text-foreground">Try typing</p>
                </div>
                <a
                  href="/app"
                  class="text-xs text-muted-foreground hover:text-foreground transition-colors"
                >
                  Open full app
                </a>
              </div>
              <HomePageTyping client:load />
            </div>
            <p class="mt-3 text-xs text-muted-foreground text-center lg:text-left">
              Tip: change the script and type in the box — it updates instantly.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Supported Scripts Banner -->
    <section class="border-y border-border/40 bg-muted/30 py-8">
      <div class="mx-auto max-w-6xl px-4 sm:px-6">
        <p class="text-center text-sm font-medium text-muted-foreground mb-4">Supported Scripts</p>
        <div class="flex flex-wrap justify-center gap-3 text-lg sm:text-xl">
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">देवनागरी</span
          >
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">తెలుగు</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">বাংলা</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">தமிழ்</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">ಕನ್ನಡ</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">ગુજરાતી</span
          >
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">മലയാളം</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">ਗੁਰਮੁਖੀ</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">ଓଡ଼ିଆ</span>
          <span class="px-3 py-1 rounded-md bg-background/50 border border-border/50">සිංහල</span>
        </div>
        <p class="text-center text-xs text-muted-foreground mt-4">
          + Ancient scripts: Brahmi, Grantha, Modi, Sharada, Siddham
        </p>
      </div>
    </section>

    <!-- Features Section -->
    <Features />

    <!-- Footer -->
    <footer class="border-t border-border/40 py-8">
      <div class="mx-auto max-w-6xl px-4 sm:px-6">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <img src="/main.png" alt="Lipi Lekhika" class="size-5" />
            <span>Lipi Lekhika</span>
          </div>
          <div class="flex items-center gap-4 text-sm">
            <a
              href="https://github.com/shubhattin/lipilekhika"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-muted-foreground hover:text-foreground transition-colors"
            >
              GitHub
              <ExternalLink class="size-3" />
            </a>
            <a
              href="/getting-started/introduction"
              class="text-muted-foreground hover:text-foreground transition-colors"
            >
              Docs
            </a>
            <a href="/app" class="text-muted-foreground hover:text-foreground transition-colors">
              App
            </a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</RootLayout>
