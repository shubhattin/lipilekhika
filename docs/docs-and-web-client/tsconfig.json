{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/components/*"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["dist"]
}
