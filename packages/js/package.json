{
  "name": "lipilekhika",
  "version": "0.1.2",
  "type": "module",
  "license": "MIT",
  "homepage": "https://lipilekhika.in/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shubhattin/lipilekhika.git"
  },
  "keywords": [
    "indic-scripts",
    "transliteration",
    "typing"
  ],
  "sideEffects": false,
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/lipilekhika.umd.js",
  "jsdelivr": "./dist/lipilekhika.umd.js",
  "browser": "./dist/lipilekhika.umd.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./typing": {
      "types": "./dist/typing.d.ts",
      "import": "./dist/esm/typing.mjs",
      "require": "./dist/cjs/typing.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "check": "tsc --noEmit",
    "test": "vitest",
    "test:bun": "bun test --concurrent --only-failures",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "make-script-data": "bun src/make_script_data/make_output_script_data.ts",
    "publish:cli": "bun run build && npm publish"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.2",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "unplugin-macros": "^0.18.6",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  }
}
